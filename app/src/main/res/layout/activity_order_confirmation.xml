<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    tools:context=".OrderConfirmation">

    <ImageView
        android:id="@+id/img"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <TextView
        android:id="@+id/order_status"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Placed Successfully"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/status0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Status:"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:id="@+id/status"
            android:layout_marginStart="7dp"
            android:layout_toRightOf="@id/status0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/quantum_vanillagreenA700"
            android:text=""/>

    </RelativeLayout>
    <Button
        android:id="@+id/track_order"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_drwable"
        android:text="Track Order"
        android:textAllCaps="false"
        android:textColor="@color/white"/>

</LinearLayout>