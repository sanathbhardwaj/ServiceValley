<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    tools:context=".GpsSelector">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarThumbVertical="@null"
        android:scrollbarThumbHorizontal="@null"
        android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="10.5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4.5">
            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/regular_italic"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/Hi"
                android:textSize="36sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.0">
            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please choose a password and select location to find services near you."
                android:fontFamily="@font/regular_italic"
                android:layout_centerInParent="true"
                android:textSize="24sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.0">
            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/f"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose a password*"
                android:fontFamily="@font/regular"/>
            <EditText
                android:inputType="textPassword"
                android:id="@+id/password"
                android:layout_marginTop="6dp"
                android:layout_below="@id/f"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:fontFamily="@font/regular"
                android:paddingStart="7dp"
                android:background="@drawable/edit_txt_background"
                android:maxLines="1"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginBottom="45dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.0">
            <Button
                android:id="@+id/location_choose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_drwable"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                android:text="Select Location"
                android:textColor="@color/white"/>

        </RelativeLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>